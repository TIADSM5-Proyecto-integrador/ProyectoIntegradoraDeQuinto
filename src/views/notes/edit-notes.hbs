<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar candidato</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-notes/{{note._id}}?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" value="{{reclutamiento.nombre}}">
                </div>
                <div class="form-group">
                    <input type="text" name="puesto" placeholder="Puesto" class="form-control">{{reclutamiento.puesto}}
                </div>
                <div class="form-group">
                    <input type="text" name="salario" placeholder="Salario" class="form-control">{{reclutamiento.salario}}
                </div>
                <div class="form-group">
                    <input type="text" name="gafette" placeholder="Gafette" class="form-control">{{reclutamiento.gafette}}
                </div>
                <div class="form-group">
                    <textarea name="seguimiento"  placeholder="Seguimiento" class="form-control">{{reclutamiento.seguimiento}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>