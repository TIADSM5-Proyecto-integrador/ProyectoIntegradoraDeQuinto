<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Registrar Su cuenta
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                    </div>
                    <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Contaseña" value="{{password}}">
                    </div>
                    <div class="form-group">
                    <input type="password" class="form-control" name="confirm_password" placeholder="Confirmar contaseña" value="{{confirm_password}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            SingUp
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>